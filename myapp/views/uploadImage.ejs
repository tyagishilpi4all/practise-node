<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
        <% if(success != ''){%>
          <div class="alert alert-primary" role="alert">          
              <strong>Success</strong> <%= success %>            
          </div>
        <%}%>

        <h3 class="mb-4 mt-5"><%= title %></h3>
         <div class="col-md-8 mx-auto border p-5">
            
            <form class="form-horizontal" action="/upload" method="post" enctype="multipart/form-data">
              <div class="form-group row">
                <label class="control-label col-sm-3">File upload:</label>
                <div class="col-sm-8">
                  <input type="file" class="form-control" name="fileUpload" placeholder="Enter name">
                </div>
              </div>
               
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="submit" class="btn btn-success">Submit</button>
                </div>
              </div>
            </form>
         </div>

         <div class="row mt-5 mb-5">
           <%if(records.length >0){%>
              <%records.forEach(function(obj){ %>
            <div class="col-md-3">
               <img src="./images/<%=obj.imageName%>" width="100%" />
            </div>
            <%})}%>
         </div>
    </div>
  </body>
</html>